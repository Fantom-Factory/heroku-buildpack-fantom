#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e



BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
# parse args
BUILD_DIR=$1
CACHE_DIR=$2


curl --silent --location http://heroku-jvm-common.s3.amazonaws.com/jvm-buildpack-common.tar.gz | tar xz
. bin/java

# create default system.properties 
if [ ! -f ${BUILD_DIR}/system.properties ]; then
  echo "java.runtime.version=1.6" > ${BUILD_DIR}/system.properties
fi

# install JDK 
javaVersion=$(detect_java_version ${BUILD_DIR})
echo -n "-----> Installing OpenJDK ${javaVersion}... "
install_java ${BUILD_DIR} ${javaVersion}
jdk_overlay ${BUILD_DIR}
echo "done"

if [ ! -d $CACHE_DIR ] ; then
  mkdir $CACHE_DIR
fi

# change to cache dir to install fantom
cd $CACHE_DIR

FAN_VERSION=1.0.63
FAN_URL="http://fan.googlecode.com/files/fantom-$FAN_VERSION.zip"

echo -n "-----> Downloading $FAN_URL ..... "
curl --silent --location $FAN_URL > fantom-$FAN_VERSION.zip
echo "done"

echo -n "-----> Installing Fantom $FAN_VERSION..... "
jar xf fantom-$FAN_VERSION.zip
chmod +r+x fantom-$FAN_VERSION/bin/*
rm fantom-$FAN_VERSION.zip
echo "done"

export FAN_HOME=$CACHE_DIR/fantom-$FAN_VERSION
export PATH=$FAN_HOME/bin:$PATH

echo ""
fan -version 2>&1 | sed -u 's/^/       /'
echo ""

cd $BUILD_DIR
 
BUILDCMD="fan build.fan heruko"
echo "-----> Building Fantom app..."
echo "       WARNING: The Gradle buildpack is currently in ALPHA."
echo "-----> executing '$BUILDCMD'"

$FAN_HOME/bin/$BUILDCMD 2>&1 | sed -u 's/^/       /'

if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build app"
  exit 1
fi

# https://devcenter.heroku.com/articles/profiled
PROFILE_PATH="$BUILD_DIR/.profile.d/fan.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="/app/.jdk/bin:$PATH"' >> $PROFILE_PATH
echo 'export FAN_HOME=$CACHE_DIR/fantom-$FAN_VERSION' >> $PROFILE_PATH
